# ==============================================================================
# Authentication & Personalization Backend - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ------------------------------------------------------------------------------
# Database Configuration (Neon Serverless Postgres)
# ------------------------------------------------------------------------------
# Get your connection string from: https://console.neon.tech
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://your-username:your-password@your-host.neon.tech/your-database?sslmode=require

# ------------------------------------------------------------------------------
# Better-Auth Configuration
# ------------------------------------------------------------------------------
# JWT Secret: Generate with: openssl rand -base64 32
# IMPORTANT: Keep this secret secure and use different values for dev/prod
JWT_SECRET=your-secure-jwt-secret-here

# JWT Algorithm (RS256 for production, HS256 acceptable for dev)
JWT_ALGORITHM=RS256

# Session Configuration
SESSION_EXPIRY=24h           # Standard session expiration
SESSION_EXPIRY_REMEMBER=168h # "Remember me" expiration (7 days)

# ------------------------------------------------------------------------------
# AI/LLM Configuration
# ------------------------------------------------------------------------------
# Anthropic API Key for Claude (content personalization & translation)
# Get your key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Claude Model Selection
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
PORT=4000

# CORS Allowed Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Node Environment
NODE_ENV=development

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
# Requests per user per minute (spec FR-035)
RATE_LIMIT_PER_USER=10

# ------------------------------------------------------------------------------
# Cache Configuration
# ------------------------------------------------------------------------------
# Transformation cache TTL in minutes (spec FR-036)
CACHE_TTL_MINUTES=5

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=info  # Options: error, warn, info, debug
