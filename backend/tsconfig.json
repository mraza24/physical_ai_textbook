{
  "compilerOptions": {
    // Target and Module Settings
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    // Output Configuration
    "outDir": "./dist",
    "rootDir": "./src",

    // Type Checking - RELAXED FOR RENDER BUILD
    "strict": false,                          // ✅ Disable strict mode
    "noImplicitAny": false,                   // ✅ Allow implicit 'any' types
    "strictNullChecks": false,                // ✅ Disable strict null checks
    "strictFunctionTypes": false,             // ✅ Disable strict function type checks
    "strictPropertyInitialization": false,    // ✅ Disable strict property initialization
    "noImplicitThis": false,                  // ✅ Allow implicit 'this' types

    // Module Resolution
    "esModuleInterop": true,                  // Allow default imports from CommonJS modules
    "skipLibCheck": true,                     // ✅ Skip type checking of declaration files (critical for build speed)
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "resolveJsonModule": true,                // Allow importing JSON files
    "moduleResolution": "node",               // Use Node.js module resolution

    // Additional Settings for Express + Better-Auth
    "allowSyntheticDefaultImports": true,     // Allow default imports from modules with no default export
    "emitDecoratorMetadata": true,            // Emit design-type metadata for decorators
    "experimentalDecorators": true,           // Enable experimental decorator support

    // Suppress Common Warnings
    "noUnusedLocals": false,                  // ✅ Don't error on unused local variables
    "noUnusedParameters": false,              // ✅ Don't error on unused parameters
    "noImplicitReturns": false,               // ✅ Don't error on missing return statements
    "noFallthroughCasesInSwitch": false       // ✅ Don't error on fallthrough cases
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
